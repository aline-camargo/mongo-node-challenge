{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "types": [],
    "lib": ["es2015"],
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": "./src",
    "paths": {
      "#domain/*": [
        "1-domain/*"
      ],
      "#application/*": [
        "2-application/*"
      ],
      "#external/*": [
        "3-external/*"
      ]
    }
  },
  "exclude": [
    "**/node_modules",
    "build/**/*"
  ]
}